                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!-- <dependency>
                <groupId>ca.uhn.hapi.fhir</groupId>
                <artifactId>hapi-fhir-test-utilities</artifactId>
                <version>${hapi_version}</version>
                <scope>test</scope>
            </dependency> -->

